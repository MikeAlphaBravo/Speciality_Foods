<h1>Here are the products currently submitted</h1>

<div class="dropdown">
  Filter By:
  <button class="btn btn-primary dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Origin Country
  </button><br><br>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <a class="dropdown-item" href="/products">All</a>
    <a class="dropdown-item" href="?origin=united states of america">USA</a>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-9">
    <p>Most Recent Reviews</p>
    <ul class="list-group">
      <% @product_recent.each do |product| %>
      <li class="list-group-item"><%= link_to product.name.split.map(&:capitalize).join(' '), product_path(product) %></li>
      <% end %>
    </ul>
  </div>
</div>
<br>

<div class="row justify-content-center">
  <div class="col-9">
    <p>Most Reviewed Product</p>
    <ul class="list-group">
      <li class="list-group-item"><%= link_to @product_most_reviews.name.split.map(&:capitalize).join(' '), product_path(@product_most_reviews) %></li>
    </ul>
    <hr>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-9">
    <div class="apple_pagination">
      <div class="row justify-content-center">
        <%= will_paginate @products %>
      </div>
    </div>
    <br>

    <p>Product List</p>
    <ul class="list-group">
      <% @products.each do |product| %>
        <li class="list-group-item"><%= link_to product.name.split.map(&:capitalize).join(' '), product_path(product) %></li>
      <% end %>
    </ul>
  </div>
